<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PageIndicatorDefaults" parent="@android:style/Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>
    <style name="Widget" />
    <style name="Widget.TabPageIndicator" parent="@style/Widget">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22.0dip</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingRight">22.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.TabPageIndicator" parent="@style/Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
    </style>
    <style name="Widget.IconPageIndicator" parent="@style/Widget">
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="EulerHermesTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid</item>
        <item name="android:actionOverflowButtonStyle">@style/EulerHermesTheme.ActionBar.OverFlow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="vpiTabPageIndicatorStyle">@style/EHTabPageIndicator</item>
    </style>
    <style name="EulerHermesTheme.ActionBar.OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    <!--<style name="EulerHermesTheme.MainActivity" parent="@style/EulerHermesTheme">-->
        <!--<item name="android:actionBarStyle">@style/EulerHermesTheme.MainActivity.ActionBar</item>-->
    <!--</style>-->
    <style name="EulerHermesTheme.LoginDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:actionBarStyle">@style/ActionBar.Solid</item>
    </style>
    <style name="EulerHermesTheme.Splashscreen" parent="@style/EulerHermesTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="EulerHermesTheme.MainActivity.ActionBar" parent="@style/ActionBar.Solid">
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>
    <style name="Button.MainBlue" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/main_blue_button_text_selector</item>
        <item name="android:background">@drawable/main_blue_button_selector</item>
    </style>
    <style name="EHTabPageIndicator" parent="@style/Widget.TabPageIndicator">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">16.0dip</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8.0dip</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">10.0dip</item>
    </style>
    <style name="ActionBar.Solid" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_blue</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse</item>
    </style>

    <style name="TwitterText" parent="@android:style/Widget.TextView">
        <item name="android:textColorLink">@android:color/white</item>
    </style>
    <style name="EulerHermesTheme.Dialog" parent="@style/EulerHermesTheme" />
    <style name="EulerHermesTheme.Dialog.Tab" parent="@style/EulerHermesTheme.Dialog">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:minWidth">80.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="WizardPageContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="WizardPageTitle">
        <item name="android:textSize">32.0sp</item>
        <item name="android:textColor">#ff0099cc</item>
        <item name="android:id">@android:id/title</item>
        <item name="android:paddingLeft">?android:listPreferredItemPaddingLeft</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16.0dip</item>
        <item name="android:layout_marginTop">16.0dip</item>
        <item name="android:layout_marginRight">16.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <style name="EulerHermesTheme.Dialog.TabText" parent="@style/EulerHermesTheme.Dialog">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxWidth">180.0dip</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="TextAppearanceFinish" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="WizardFormLabel">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
