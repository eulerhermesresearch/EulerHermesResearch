<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

    <WebView
            android:id="@+id/webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    <ProgressBar
            android:layout_gravity="center"
            android:id="@android:id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.eulerhermes.research.view.EmptyView
            android:layout_gravity="center"
            android:id="@android:id/empty"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:layout_gravity="bottom|center|left"
            android:id="@+id/legend_button"
            android:background="@null"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_spacing_minor"
            android:layout_marginBottom="@dimen/default_spacing_minor"
            android:src="@drawable/ic_about"/>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
            android:id="@+id/tooltip_frame_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    <ViewStub
            android:id="@+id/coachmark"
            android:layout="@layout/coachmark_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</FrameLayout>