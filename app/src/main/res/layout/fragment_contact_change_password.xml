<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <TextView
            android:textSize="24.0sp"
            android:textColor="#ff0099cc"
            android:id="@android:id/title"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_section_change_password"
            android:fontFamily="sans-serif-thin"/>

    <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/old_password"
                    style="@style/WizardFormLabel"/>

            <EditText
                    android:id="@+id/old_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_spacing_major"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"/>

            <TextView
                    android:text="@string/new_password"
                    style="@style/WizardFormLabel"/>

            <EditText
                    android:id="@+id/new_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_spacing_major"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"/>

            <TextView
                    android:text="@string/new_password_confirm"
                    style="@style/WizardFormLabel"/>

            <EditText
                    android:id="@+id/new_password2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>