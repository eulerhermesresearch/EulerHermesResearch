<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <com.yabeman.android.extended.widget.TypefaceTextView
            android:textSize="18.0sp"
            android:textColor="@android:color/white"
            android:id="@+id/title"
            android:background="@drawable/header_bgd"
            android:padding="@dimen/default_spacing_major"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/key_figures"
            app:fontFamily="Roboto-Light"/>

    <com.yabeman.android.extended.widget.TypefaceTextView
            android:textSize="12.0sp"
            android:textColor="?android:textColorSecondary"
            android:layout_gravity="bottom"
            android:id="@+id/text"
            android:background="@drawable/card_background"
            android:padding="@dimen/default_spacing_minor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/gdp"
            android:lineSpacingMultiplier="1.2"
            app:fontFamily="Roboto-Light"/>
</LinearLayout>