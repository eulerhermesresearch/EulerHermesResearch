<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/bg_card_white"
              android:paddingTop="@dimen/default_spacing_major"
              android:paddingBottom="@dimen/default_spacing_major"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout
            android:paddingLeft="@dimen/default_spacing_major"
            android:paddingRight="@dimen/default_spacing_minor"
            android:paddingBottom="@dimen/default_spacing_major"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

        <com.yabeman.android.extended.widget.TypefaceTextView
                android:textSize="18.0sp"
                android:textColor="@color/main_blue"
                android:id="@+id/title"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:fontFamily="Roboto-Medium"/>

        <ImageButton
                android:id="@+id/overflow_button"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overflow_button"/>
    </LinearLayout>

    <com.makeramen.RoundedImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/image"
            android:layout_width="@dimen/team_image_width"
            android:layout_height="@dimen/team_image_height"
            android:scaleType="fitXY"
            app:border_width="3.0dip"
            app:border_color="@color/dark_grey_blue"/>

    <com.yabeman.android.extended.widget.TypefaceTextView
            android:textSize="12.0sp"
            android:textColor="?android:textColorSecondary"
            android:id="@+id/desc"
            android:paddingLeft="@dimen/default_spacing_major"
            android:paddingTop="@dimen/default_spacing_major"
            android:paddingRight="@dimen/default_spacing_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            app:fontFamily="Roboto-Light"/>
</LinearLayout>